<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>OneServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.OneServlet</servlet-class>
        <!--如未配置load-on-startup，容器一般在第一次响应web请求时，会先检测该servlet是否初始化，
        如未初始化，则调用servlet的init()先初始化，初始化成功后，再响应请求-->
    </servlet>
    <servlet>
        <servlet-name>TwoServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.TwoServlet</servlet-class>
        <!--配置load-on-startup后，servlet在startup后立即加载，正数的值越小，启动该servlet的优先级越高-->
        <load-on-startup>9</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ThreeServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.ThreeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FourServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.FourServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FiveServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.FiveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SixServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.SixServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SeventhServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.SeventhServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EightServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.redirect.EightServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NineServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.redirect.NineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TenServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.forwardrequests.TenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ElevenServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.forwardrequests.ElevenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenCardServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.orderingfood.OpenCardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FoodServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.orderingfood.FoodServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TwelveServlet</servlet-name>
        <servlet-class>com.fullstackboy.servlet.controller.TwelveServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OneServlet</servlet-name>
        <url-pattern>/one</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TwoServlet</servlet-name>
        <url-pattern>/two</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThreeServlet</servlet-name>
        <url-pattern>/three</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FourServlet</servlet-name>
        <url-pattern>/four</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FiveServlet</servlet-name>
        <url-pattern>/five</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SixServlet</servlet-name>
        <url-pattern>/six</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeventhServlet</servlet-name>
        <url-pattern>/seventh</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EightServlet</servlet-name>
        <url-pattern>/eight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NineServlet</servlet-name>
        <url-pattern>/nine</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TenServlet</servlet-name>
        <url-pattern>/ten</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ElevenServlet</servlet-name>
        <url-pattern>/eleven</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenCardServlet</servlet-name>
        <url-pattern>/openCard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FoodServlet</servlet-name>
        <url-pattern>/food</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TwelveServlet</servlet-name>
        <url-pattern>/twelve</url-pattern>
    </servlet-mapping>

    <!--注册监听器-->
    <listener>
        <listener-class>com.fullstackboy.servlet.listener.OneListener</listener-class>
        <listener-class>com.fullstackboy.servlet.listener.TwoListener</listener-class>
    </listener>

<!--    声明filter类-->
    <filter>
        <filter-name>OneFilter</filter-name>
        <filter-class>com.fullstackboy.servlet.filter.OneFilter</filter-class>
    </filter>

<!--    通知Tomcat在调用何种资源文件时需要被当前过滤器拦截-->
    <filter-mapping>
        <filter-name>OneFilter</filter-name>
        <url-pattern>/mm.jpg</url-pattern>
    </filter-mapping>
</web-app>